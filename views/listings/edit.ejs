<% layout("layouts/boilerplate") -%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Edit your data</h2>
            <form method="POST" action="/listing/<%= data._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" value="<%= data.title %>" name="title" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                      </div
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea placeholder="<%= data.description %>" name="description" class="form-control"required></textarea>
                    <div class="invalid-feedback">
                        Please enter valid syntax
                      </div

                </div>
                <ul>
                    <h3>image information</h3>
                    <div class="row">
                        <div class="mb-3">
                            <img src="<%=originalmageUrl%>" alt="">
                        </div>
                        <div class="mb-3 col-4">
                            <label for="filename" class="form-label">filename</label>
                            <li> <input type="text" value="<%= data.image.filename %>" name="filename"
                                    class="form-control"></li>

                        </div>
                        <div class="mb-3 col-8">
                            <label for="url" class="form-label">Upload New Image </label>
                            <li><input type="file" value="<%= data.image.url %>" name="url"
                                    class="form-control"></li>
                        </div>
                    </div>
                </ul>
                <div class="row">
                    <div class="mb-3 col-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" value="<%= data.price %>" name="price" class="form-control" required>
                        <!--listing[price]-->
                        <div class="invalid-feedback">
                            Please enter valid syntax
                          </div
                    </div>
                    <div class="mb-3 col-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" value="<%= data.country %>" name="country"
                            class="form-control" required><!--listing[country]-->
                            <div class="invalid-feedback">
                                Please enter valid syntax
                              </div
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="location" value="<%= data.location %>" class="form-control" required>
                        <!--listing[location]-->
                        <div class="invalid-feedback">
                            Please enter valid syntax
                          </div
                    </div>
                </div>
                <button class="btn btn-dark btn-cl">Edit listing</button>
            </form>
        </div>
    </div>