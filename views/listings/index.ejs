<% layout("layouts/boilerplate") -%>
<!--  -->
<style>
   #filters{
      display: flex;
      flex-wrap: wrap;
      align-items: center;
   }
   .filter{
      text-align: center;
      margin-right: 2rem;
      margin-top: 1.6rem;
      opacity: 0.7;
   }
   .filter:hover{
      opacity: 1;
      cursor: pointer;
   }
   .filter p{
      font-size: 0.8rem;
   }
   .tax-info{
      display: none;
   }
   .switch-toggle{
      border: 2px solid black;
      width: 200px;
      border-radius: 2rem;
      height: 7vh;
      padding: 1rem;
      display: flex;
      align-items: center;
      
   }
</style>
   <div id="filters">
      <div class="filter">
         <div><i class="fa-sharp-duotone fa-solid fa-fire"></i></div>
         <p>Trending</p>
      </div>
      <div class="filter">
         <div><i class="fa-solid fa-bed"></i></div>
         <p>Rooms</p>
      </div>
      <div class="filter">
         <div><i class="fa-sharp fa-solid fa-water-ladder"></i></i></div>
         <p>Amazing pool</p>
      </div>
      <div class="filter">
         <div><i class="fa-solid fa-wheat-awn"></i></div>
         <p>Farms</p>
      </div>
      <div class="filter">
         <div><i class="fa-sharp-duotone fa-solid fa-mountain-sun"></i></div>
         <p>Amazing view</p>
      </div>
      <div class="filter">
         <div><i class="fa-solid fa-tents"></i></div>
         <p>Camping</p>
      </div>
      <div class="filter">
         <div><i class="fa-solid fa-city"></i></div>
         <p>Top Cites</p>
      </div>
      <div class="filter">
         <div><i class="fa-solid fa-igloo"></i></div>
         <p>Dom</p>
      </div>
      <div class="filter">
         <div><i class="fa-solid fa-flag-usa"></i></div>
         <p>CountrySide</p>
      </div>
      <div class="filter">
         <div><i class="fa-solid fa-person-swimming"></i></div>
         <p>BeachSide</p>
      </div>
      <div class="filter">
         <div><i class="fa-solid fa-landmark-dome"></i></div>
         <p>HistoricHome</p>
      </div>
      <div class="switch-toggle">
         <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display Taxes</label>
          </div>
      </div>
   </div>
    <div class="row row-cols-lg-3 mt-3 row-cols-md-2 row-cols-sm-1">
      <% for(list of allListing){%>
         <a href="/listing/<%= list._id %>" class="listing-link">
         <div class="card col listing-card">
            <img src="<%= list.image.url %>" class="card-img-top" alt="listing-image" style="height:20rem" />
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text"><b><%=  list.title %> </b><br> 
               &#8377;<%= list.price.toLocaleString('en-IN') %>/night
               <i class="tax-info">&nbsp; &nbsp; +18% GST</i></p>
            </div>
          </div>
         </a>
   
     <% } %>
    </div>
    <script>
      let pressbutton=document.getElementById("flexSwitchCheckDefault");
      pressbutton.addEventListener("click",()=>{
         let taxInfo=document.getElementsByClassName("tax-info");
         for(info of taxInfo){
            if(info.style.display!="inline"){
               info.style.display="inline";
            }else{
               info.style.display="none";
            }

         }
      });
    </script>